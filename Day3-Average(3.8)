#include <stdio.h>
void main()
{
int heights[50],n,i,sum=0;
printf("Enter the number of elements:");
scanf("%d",&n);
for(i=0;i<n;i++)
{
printf("Element %d:",i);
scanf("%d",&heights[i]);
sum=sum+heights[i];
}

printf("Sum:%d",sum);
printf("Avg:%f",((float)sum/n));
return 0;
}

OUTPUT:
Enter the number of elements:5
Element 0:6
Element 1:3
Element 2:9
Element 3:55
Element 4:66
Sum:139Avg:27.799999
