INVERTED TRIANGLE

#include <stdio.h>
int main()
{
    int n;
    int m=1;
    int i,j,k;
    printf("enter the number of rows");
    scanf("%d",&n);
    for(i=n;i>=1;i--)
    {
        for(j=1;j<m;j++)
        {
            printf(" ");
        }
        for(k=1;k<=2*i-1;k++)
        {
            if(k==1 || k==2*i-1 || i==n)
            printf("*");
            else
            printf(" ");
        }
        m++;
        printf("\n");
    }
    return 0;
        }

OUTPUT:
enter the number of rows15
